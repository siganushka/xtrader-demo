{% extends 'base.html.twig' %}

{% block body %}
  <h3>ProductBundle</h3>

  <div class="overflow-x-auto my-3">
    <table class="table table-striped table-hover m-0">
      <tr class="table-light">
        <th style="min-width: 60px">ID</th>
        <th style="min-width: 280px">{{ 'product.variant.option_values'|trans }}</th>
        <th style="min-width: 100px">{{ 'product.variant.price'|trans }}</th>
        <th style="min-width: 100px">{{ 'product.variant.inventory'|trans }}</th>
        <th style="min-width: 100px">{{ 'generic.action'|trans }}</th>
      </tr>
      {% for entity in pagination %}
      <tr>
        <td>{{ entity.id }}</td>
        <td>{{ entity.descriptor }}</td>
        <td>{{ entity.price|money }}</td>
        <td>{{ entity.inventory|default('-') }}</td>
        <td>
          <a href="{{ path('app_productvariant_edit', { id: entity.id }) }}">{{ 'generic.edit'|trans }}</a>
          <a href="{{ path('app_productvariant_delete', { id: entity.id }) }}" onclick="return confirm('{{ 'generic.delete_confirmation'|trans }}')">{{ 'generic.delete'|trans }}</a>
        </td>
      </tr>
      {% else %}
      <tr>
        <td colspan="65536" class="text-center text-body-secondary">{{ 'generic.no_items'|trans }}</td>
      </tr>
      {% endfor %}
    </table>
  </div>

  {% if pagination.totalItemCount %}
  <div class="pagination justify-content-center">
    {{ knp_pagination_render(pagination) }}
  </div>
  {% endif %}
{% endblock %}
