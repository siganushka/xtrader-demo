{% extends 'base.html.twig' %}

{% block body %}
  <h3 class="mb-3">OrderBundle</h3>

  <p>
    <a href="{{ path('app_order_new') }}" class="btn btn-primary">创建订单</a>
  </p>

  <div class="overflow-x-auto my-3">
    <table class="table table-striped table-hover m-0">
      <tr class="table-light">
        <th style="min-width: 160px">{{ 'order.number'|trans }}</th>
        <th style="min-width: 300px">{{ 'order.items'|trans }}</th>
        <th style="min-width: 160px">{{ 'order.total_column'|trans }}</th>
        <th style="min-width: 160px">{{ 'generic.created_at'|trans }}</th>
        <th style="min-width: 140px">操作</th>
      </tr>
      {% for entity in pagination %}
      <tr>
        <td><code>{{ entity.number }}</code></td>
        <td>
          {% for item in entity.items %}
            {{ item.variant.descriptor }}
            <small class="text-secondary">&times;{{ item.quantity }}</small>
            <br />
          {% endfor %}
        </td>
        <td>{{ entity.itemsTotal|money }}/{{ entity.adjustmentsTotal|money }}/{{ entity.total|money }}</td>
        <td>{{ entity.createdAt|date('Y-m-d H:i') }}</td>
        <td>
          <a href="{{ path('app_order_show', { number: entity.number }) }}">详情</a>
          <a href="{{ path('app_order_edit', { number: entity.number }) }}">编辑</a>
          <a href="{{ path('app_order_delete', { number: entity.number }) }}" onclick="return confirm('确定删除码？')">删除</a>
        </td>
      </tr>
      {% else %}
      <tr>
        <td colspan="65536" class="text-center text-body-secondary">没有记录！</td>
      </tr>
      {% endfor %}
    </table>
  </div>

  {% if pagination.totalItemCount %}
  <div class="pagination justify-content-center">
    {{ knp_pagination_render(pagination) }}
  </div>
  {% endif %}
{% endblock %}
